<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:gravity="center" android:orientation="vertical" android:padding="8dp">
    <TextView android:id="@+id/tvDayName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#888" android:textSize="11sp" android:textAllCaps="true"/>
    <TextView android:id="@+id/tvDayNumber" android:layout_width="36dp" android:layout_height="36dp" android:gravity="center" android:textColor="#FFF" android:textStyle="bold" android:textSize="16sp"/>
</LinearLayout>